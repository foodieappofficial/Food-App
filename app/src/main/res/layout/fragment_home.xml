<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="@font/avenirbold"
        android:text="Foodie"

        />

        <TextView
            android:id="@+id/user_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="18sp"
            android:fontFamily="@font/avenirbold"
            android:text="Business Park, Turbhe"

            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/searchbar_background"
            app:cardElevation="15dp"
            app:cardCornerRadius="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


        <EditText
            android:id="@+id/et_search_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:paddingVertical="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            android:hint="search your food"
            />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.7"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/black"
                    android:background="@drawable/search"
                    android:contentDescription="search" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="@color/section_red"
        app:cardElevation="15dp"
        app:cardCornerRadius="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
                android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_offer_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirbold"
                android:paddingVertical="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:text="Special Offer"
                />

            <TextView
                android:id="@+id/tv_offer_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="20sp"
                android:fontFamily="@font/avenirbold"
                android:textColor="@color/white"
                android:text="extra 15% off on recipes"
                />

        </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shwarmfood"
                android:contentDescription="search" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>






